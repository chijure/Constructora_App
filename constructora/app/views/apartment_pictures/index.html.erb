<div class="jumbotron p-4">
  <h2><b>Fotos de Departamento</b></h2>
  <p id="notice" class="badge badge-pill badge-danger pt-2 pb-2"><%= notice %></p>
  <div class="table-responsive-sm">
    <table class="table table-striped table-hover w-100">
      <thead class="thead-dark">
        <tr>
          <th colspan="4" class="text-center">
            <%= link_to image_tag('NewIcon.png'), new_apartment_picture_path, title: 'Nuevo' %>
          </th>
          <th>Departamento</th>          
          <th>Foto</th>
          <th>Descripción</th>
          <th class="text-center">Activo</th>
        </tr>
      </thead>
      <%= session[:s_project_apartment_id] = nil %>
      <tbody>
        <% @apartment_pictures.each do |apartment_picture| %>
          <tr>
            <td style="width:33px; vertical-align: middle;" class="pr-2 pl-2"><%= link_to image_tag('ShowIcon.png'), apartment_picture, title: 'Ver' %></td>
            <td style="width:33px; vertical-align: middle;" class="pr-1 pl-1"><%= link_to image_tag('EditIcon.png'), edit_apartment_picture_path(apartment_picture), title: 'Editar' %></td>
            <td style="width:33px; vertical-align: middle;" class="pr-1 pl-1"><%= link_to image_tag('NewSaleIcon.png'), sales_newfrombooking_path + '/' + apartment_picture.id.to_s, title: 'Nueva Venta' %></td>
            <td style="width:40px; vertical-align: middle;" class="pr-1 pl-2">
              <%= link_to image_tag('DeleteIcon.png'), apartment_picture, title: 'Eliminar', method: :delete, data: { confirm: '¿Esta seguro?' } %></td>
            <td style="vertical-align: middle;">
              <%= ProjectApartment.select(:Number).where("id = " + apartment_picture.project_apartment_id.to_s).collect(&:Number)[0] %>
            </td>
            <td style="vertical-align: middle;">
              <%= image_tag(apartment_picture.Picture.to_s, :width => 200) %>              
            </td>
            <td style="vertical-align: middle;"><%= apartment_picture.Description %></td>
            <td style="vertical-align: middle;" class="text-center">
              <%= check_box_tag "IsActive", 0, apartment_picture.IsActive, disabled: true, class: "checkBoxSyleIndex" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>