<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      Se encontraron los siguientes errores:
    
      <ul class="ml-3">
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
    </div>
  </div>
<% end %>