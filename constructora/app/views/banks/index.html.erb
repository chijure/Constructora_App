<div class="jumbotron p-4">
  <h2><b>Bancos</b></h2>
  <p id="notice" class="badge badge-pill badge-danger pt-2 pb-2"><%= notice %></p>
  <div class="table-responsive-sm">
    <table class="table table-striped table-hover w-50">
      <thead class="thead-dark">
        <tr>
          <th colspan="3" class="text-center">
            <%= link_to image_tag('NewIcon.png'), new_bank_path, title: 'Nuevo' %>
          </th>
          <th>Nombre</th>
          <th class="text-center">Activo</th>
        </tr>
      </thead>

      <tbody>
        <% @banks.each do |bank| %>
          <tr>
            <td style="width:33px" class="pr-2 pl-2"><%= link_to image_tag('ShowIcon.png'), bank, title: 'Ver' %></td>
            <td style="width:33px" class="pr-1 pl-1"><%= link_to image_tag('EditIcon.png'), edit_bank_path(bank), title: 'Editar' %></td>
            <td style="width:40px" class="pr-1 pl-2">
              <%= link_to image_tag('DeleteIcon.png'), bank, title: 'Eliminar', method: :delete, data: { confirm: 'Â¿Esta seguro?' } %>              
            </td>
            <td><%= bank.Name %></td>
            <td class="text-center">
              <%= check_box_tag "IsActive", 0, bank.IsActive, disabled: true, class: "checkBoxSyleIndex" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>
