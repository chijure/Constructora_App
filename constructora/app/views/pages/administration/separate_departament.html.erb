<div class="container p-1">
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4 box-shadow p-4">
                <div class="card-body">
                    <h2 class="card-title text-center"><strong>Separar Departamentos</strong></h2>
                    <form>
                        <div class="text-center p-3">
                            <div class="form-group">
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="inlineRadioOptions"
                                        id="inlineRadio1" value="option1">
                                    <label class="form-check-label" for="inlineRadio1">Departamento</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="inlineRadioOptions"
                                        id="inlineRadio3" value="option3">
                                    <label class="form-check-label" for="inlineRadio3">Cliente</label>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="validationTooltipUsernamePrepend">Buscar</span>
                                </div>
                                <input type="text" class="form-control col-sm-12" id="validationTooltipUsername"
                                    placeholder="Inicie su busqueda" aria-describedby="validationTooltipUsernamePrepend"
                                    required>
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="validationTooltipUsernamePrepend"><i class="fas fa-search"></i></span>
                                </div>
                            </div>
                        </div>

                        <br>

                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="formGroupExampleInput">Departamento</label>
                                <input type="text" class="form-control col-sm-8" id="formGroupExampleInput"
                                    placeholder="Eliga un departamento">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="inputState">Proyecto</label>
                                <select id="inputState" class="form-control col-sm-8">
                                    <option selected>Eliga un proyecto...</option>
                                    <option>...</option>
                                </select>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="formGroupExampleInput">Cliente</label>
                                <input type="text" class="form-control col-sm-8" id="formGroupExampleInput"
                                    placeholder="Ingrese cliente">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="formGroupExampleInput">Nro Operción</label>
                                <input type="text" class="form-control col-sm-8" id="formGroupExampleInput"
                                    placeholder="436788843">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="formGroupExampleInput">Monto</label>
                                <input type="text" class="form-control col-sm-8" id="formGroupExampleInput"
                                    placeholder="$">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="formGroupExampleInput">F. Separación</label>
                                <input type="date" class="form-control col-sm-8" id="formGroupExampleInput">
                            </div>
                        </div>
                        <div class="text-center p-2">
                            <button type="button" class="btn btn-info btn-lg">Separar Departamento</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>