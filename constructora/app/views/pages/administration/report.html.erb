<div class="container p-1">
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4 box-shadow p-4">
                <div class="text-center">
                    <i class="fas fa-file-invoice fa-7x"></i>
                </div>
                <div class="card-body">
                    <h2 class="card-title text-center"><strong>Reportes</strong></h2>
                    <form>
                        <div class="text-center p-3">
                            <div class="form-group">
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="inlineRadioOptions"
                                        id="inlineRadio1" value="option1">
                                    <label class="form-check-label" for="inlineRadio1">Disponibles</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="inlineRadioOptions"
                                        id="inlineRadio2" value="option2">
                                    <label class="form-check-label" for="inlineRadio2">Separados</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="inlineRadioOptions"
                                        id="inlineRadio3" value="option3">
                                    <label class="form-check-label" for="inlineRadio3">Vendidos</label>
                                </div>
                            </div>
                        </div>

                        <table class="table table-striped">
                            <thead class="thead-dark">
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Proyectos</th>
                                    <th scope="col">Estado</th>
                                    <th scope="col">Ver Departamento</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <th scope="row">1</th>
                                    <td>Proyecto Antares</td>
                                    <td>
                                        <input class="form-control col-sm-8" type="text" placeholder="Vendido" readonly>
                                    </td>
                                    <td>
                                        <a href=""><i class="fas fa-eye fa-2x"></i></a>
                                    </td>
                                </tr>
                                <tr>
                                    <th scope="row">2</th>
                                    <td>Proyecto El Alamo</td>
                                    <td>
                                        <input class="form-control col-sm-8" type="text" placeholder="Disponible"
                                            readonly>
                                    </td>
                                    <td>
                                        <a href=""><i class="fas fa-eye fa-2x"></i></a>
                                    </td>
                                </tr>
                                <tr>
                                    <th scope="row">3</th>
                                    <td>Proyecto Las Torres</td>
                                    <td>
                                        <input class="form-control col-sm-8" type="text" placeholder="Disponible"
                                            readonly>
                                    </td>
                                    <td>
                                        <a href=""><i class="fas fa-eye fa-2x"></i></a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="col-sm-6 offset-md-5">
                            <div class="btn-toolbar text-center" role="toolbar" aria-label="Toolbar with button groups">
                                <div class="btn-group mr-2" role="group" aria-label="First group">
                                    <button type="button" class="btn btn-secondary"><i
                                            class="fas fa-angle-double-left"></i></button>
                                    <button type="button" class="btn btn-secondary"><i
                                            class="fas fa-chevron-left"></i></button>
                                    <button type="button" class="btn btn-secondary"><i
                                            class="fas fa-chevron-right"></i></button>
                                    <button type="button" class="btn btn-secondary"><i
                                            class="fas fa-angle-double-right"></i></button>
                                </div>
                            </div>
                        </div>
                        <div class="text-center p-2">
                            <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#reportModal">Generar Reporte</button>
                            <%= render 'pages/administration/modal' %>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>