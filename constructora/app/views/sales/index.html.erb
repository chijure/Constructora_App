<p id="notice"><%= notice %></p>

<h1>Sales</h1>

<table>
  <thead>
    <tr>
      <th>Idsale</th>
      <th>Idapartmenttype</th>
      <th>Idapartmentbooking</th>
      <th>Idbank</th>
      <th>Saledate</th>
      <th>Paymenttype</th>
      <th>Cashamount</th>
      <th>Financedamount</th>
      <th>Isactive</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sales.each do |sale| %>
      <tr>
        <td><%= sale.IdSale %></td>
        <td><%= sale.IdApartmentType %></td>
        <td><%= sale.IdApartmentBooking %></td>
        <td><%= sale.IdBank %></td>
        <td><%= sale.SaleDate %></td>
        <td><%= sale.PaymentType %></td>
        <td><%= sale.CashAmount %></td>
        <td><%= sale.FinancedAmount %></td>
        <td><%= sale.IsActive %></td>
        <td><%= link_to 'Show', sale %></td>
        <td><%= link_to 'Edit', edit_sale_path(sale) %></td>
        <td><%= link_to 'Destroy', sale, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

