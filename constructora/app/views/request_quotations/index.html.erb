<div class="jumbotron p-4">
  <h2><b>Solicitud de Cotización</b></h2>
  <p id="notice" class="badge badge-pill badge-danger pt-2 pb-2"><%= notice %></p>
  <div class="table-responsive-sm">
    <table class="table table-striped table-hover w-100">
      <thead class="thead-dark">
        <tr>
          <th colspan="3" class="text-center">
            <%= link_to image_tag('NewIcon.png'), new_request_quotation_path, title: 'Nuevo' %>
          </th>
          <th class="text-center">Solicitud</th>
          <th>Nombre</th>
          <th>Apellidos</th>
          <th>Proyecto</th>
          <th>Usuario</th>
          <th>Teléfono</th>
          <th>Fecha</th>
          <th>Estado</th>
        </tr>
      </thead>

      <tbody>
        <% @request_quotations.each do |request_quotation| %>
          <tr>
            <td style="width:33px" class="pr-2 pl-2"><%= link_to image_tag('ShowIcon.png'), request_quotation, title: 'Ver' %></td>
            <td style="width:33px" class="pr-1 pl-1"><%= link_to image_tag('EditIcon.png'), edit_request_quotation_path(request_quotation), title: 'Editar' %></td>
            <td style="width:40px" class="pr-1 pl-2">
              <%= link_to image_tag('DeleteIcon.png'), request_quotation, title: 'Eliminar', method: :delete, data: { confirm: '¿Esta seguro?' } %>              
            </td>
            <td class="text-center"><%= request_quotation.id %></td>
            <td><%= request_quotation.Name %></td>
            <td><%= request_quotation.LastName %></td>
            <td><%= Project.select(:Name).where("id = " + request_quotation.project_id.to_s).collect(&:Name)[0] %></td>
            <td><%= User.select(:Name).where("id = " + request_quotation.user_id.to_s).collect(&:Name)[0] %></td>
            <td><%= request_quotation.Phone %></td>
            <td><%= request_quotation.RequestDate %></td>
            <td>
              <%=
              case request_quotation.Status
              when 0
                "Generado"
              when 1
                "Cotizado"
              when 2
                "Rechazado"
              when 3
                "Cancelado"
              else
                "No Definido"
              end %>              
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>