<%= form_with(model: project_ap_type_price, local: true) do |form| %>
  <% if project_ap_type_price.errors.any? %>
    <div id="error_explanation">
      <h5 class="text-danger">Se encontraron los siguiente errores:</h5>

      <ul class="ml-3 text-danger">
      <% project_ap_type_price.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <hr>
  <div class="ml-3 mt-4 row">
    <div class="col-sm-4">
      <%= form.label :project_apartment_type_id, 'Proyecto Tipo Dep.' %>
    </div>
    <div class="col-sm-8">
      <%= form.select :project_apartment_type_id, ProjectApartmentType.joins(:apartment_type, :project).select("project_apartment_types.id, projects.Name as p_Name, apartment_types.Name as at_Name").collect {|e| [e.p_Name + ' - ' + e.at_Name, e.id]}, {:include_blank => "Seleccione..."}, {:class => "form-control"} %>
    </div>
  </div>

 
  <div class="ml-3 mt-4 row">
    <div class="col-sm-4">
      <%= form.label :RegisterDate, 'Fecha Registro' %>
    </div>
    <div class="col-sm-8">
      <%= form.date_select :RegisterDate, {:class => "form-control"} %>
    </div>
  </div>


  <div class="ml-3 mt-4 row">
    <div class="col-sm-4">
      <%= form.label :ValidFor, 'Válido por (días)' %>
    </div>
    <div class="col-sm-8">
      <%= form.number_field :ValidFor, {:class => "form-control"} %>
    </div>
  </div>

  <div class="ml-3 mt-4 row">
    <div class="col-sm-4">
      <%= form.label :PercentageDiscount, 'Porcent. Descuento' %>
    </div>
    <div class="col-sm-8">
      <%= form.number_field :PercentageDiscount, {:class => "form-control"} %>
    </div>
  </div>


  <div class="ml-3 mt-4 row">
    <div class="col-sm-4">
      <%= form.label :Floor, 'Piso' %>
    </div>
    <div class="col-sm-8">
      <%= form.number_field :Floor, {:class => "form-control"} %>
    </div>
  </div>

  <div class="ml-3 mt-4 row">
    <div class="col-sm-4">
      <%= form.label :Price, 'Precio' %>
    </div>
    <div class="col-sm-8">
      <%= form.number_field :Price, {:class => "form-control"} %>
    </div>
  </div>

  <div class="ml-3 mt-4 row">
    <div class="col-sm-4">
      <%= form.label :IsActive, 'Activo' %>
    </div>
    <div class="col-sm-8">
      <%= form.check_box :IsActive, :class => "checkBoxSyleForm" %>
    </div>
  </div>
  <hr>
  <div class="actions">
    <%= form.submit "Guardar", :type => :image, :src => "/assets/SaveIconBig.png", :title => 'Guardar' %>
  </div>
<% end %>
