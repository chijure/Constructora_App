<div class="jumbotron p-4">
  <p id="notice" class="badge badge-pill badge-danger pt-2 pb-2"><%= notice %></p>
  <div class="table-responsive-sm">
    <table class="table table-striped table-hover w-100">
      <thead class="thead-dark">
        <tr>
          <th colspan="3" class="text-center">
            <%= link_to image_tag('NewIcon.png'), new_project_apartment_type_path, title: 'Nuevo' %>
          </th>
          <th>Proyecto</th>
          <th>Tipo de Departamento</th>
          <th>Area</th>
          <th>Piso</th>
          <th>Cantidad</th>
          <th class="text-center">Activo</th>
        </tr>
      </thead>

      <tbody>
        <% project_apartment_types.each do |project_apartment_type| %>
          <tr>
            <td style="width:33px" class="pr-2 pl-2"><%= link_to image_tag('ShowIcon.png'), project_apartment_type, title: 'Ver' %></td>
            <td style="width:33px" class="pr-1 pl-1"><%= link_to image_tag('EditIcon.png'), edit_project_apartment_type_path(project_apartment_type), title: 'Editar' %></td>
            <td style="width:40px" class="pr-1 pl-2">
              <%= link_to image_tag('DeleteIcon.png'), project_apartment_type, title: 'Eliminar', method: :delete, data: { confirm: 'Â¿Esta seguro?' } %></td>         
            <td><%= Project.select(:Name).where("id = " + project_apartment_type.project_id.to_s).collect(&:Name)[0] %></td>
            <td><%= ApartmentType.select(:Name).where("id = " + project_apartment_type.apartment_type_id.to_s).collect(&:Name)[0] %></td>
            <td><%= project_apartment_type.Area %></td>
            <td><%= project_apartment_type.Floor %></td>
            <td><%= project_apartment_type.Quantity %></td>
            <td class="text-center">
              <%= check_box_tag "IsActive", 0, project_apartment_type.IsActive, disabled: true, class: "checkBoxSyleIndex" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>