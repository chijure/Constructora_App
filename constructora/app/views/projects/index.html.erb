<div class="jumbotron p-4">
  <h2><b>Citas</b></h2>
  <p id="notice" class="badge badge-pill badge-danger pt-2 pb-2"><%= notice %></p>
  <div class="table-responsive-sm">
    <table class="table table-striped table-hover w-100">
      <thead class="thead-dark">
        <tr>
          <th colspan="3" class="text-center">
            <%= link_to image_tag('NewIcon.png'), new_project_path, title: 'Nuevo' %>
          </th>
          <th>Nombre</th>
          <th>Distrito</th>
          <th>Precio</th>
          <th>Fecha Inicio</th>
          <th>Fecha Fin</th>
          <th>Pisos</th>
          <th>Departamentos</th>
          <th>Estacionamientos</th>
          <th>Status</th>
        </tr>
      </thead>

      <tbody>
        <% @projects.each do |project| %>
          <tr>
            <td style="width:33px" class="pr-2 pl-2"><%= link_to image_tag('ShowIcon.png'), project, title: 'Ver' %></td>
            <td style="width:33px" class="pr-1 pl-1"><%= link_to image_tag('EditIcon.png'), edit_project_path(project), title: 'Editar' %></td>
            <td style="width:40px" class="pr-1 pl-2">
              <%= link_to image_tag('DeleteIcon.png'), project, title: 'Eliminar', method: :delete, data: { confirm: 'Â¿Esta seguro?' } %>              
            </td>            
            <td><%= project.Name %></td>
            <td><%= City.select(:Name).where("id = " + project.city_id.to_s).collect(&:Name)[0] %></td>
            <td><%= project.Price %></td>
            <td><%= project.StartDate %></td>
            <td><%= project.EndDate %></td>
            <td><%= project.Floors %></td>
            <td><%= project.ApartmentsQuantity %></td>
            <td><%= project.ParkingsQuantity %></td>
            <td><%= project.Status %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>