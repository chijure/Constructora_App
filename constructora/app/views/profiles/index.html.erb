<div class="jumbotron p-4">
  <h2><b>Perfiles</b></h2>
  <p id="notice" class="badge badge-pill badge-danger pt-2 pb-2"><%= notice %></p>
  <div class="table-responsive-sm">
    <table class="table table-striped table-hover w-50">
      <thead class="thead-dark">
        <tr>
          <th colspan="3" class="text-center">
            <%= link_to image_tag('NewIcon.png'), new_profile_path, title: 'Nuevo' %>
          </th>
          <th>Nombre</th>
          <th>Activo</th>
        </tr>
      </thead>

      <tbody>
        <% @profiles.each do |profile| %>
          <tr>
            <td style="width:33px" class="pr-2 pl-2"><%= link_to image_tag('ShowIcon.png'), profile, title: 'Ver' %></td>
            <td style="width:33px" class="pr-1 pl-1"><%= link_to image_tag('EditIcon.png'), edit_profile_path(profile), title: 'Editar' %></td>
            <td style="width:40px" class="pr-1 pl-2">
              <%= link_to image_tag('DeleteIcon.png'), profile, title: 'Eliminar', method: :delete, data: { confirm: 'Â¿Esta seguro?' } %>              
            </td>
            <td><%= profile.Name %></td>
            <td><%= profile.IsActive %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>
