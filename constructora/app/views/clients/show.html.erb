<div class="jumbotron p-4">
  <h2><b>Ver | Usuario</b></h2>
  <div class="table-responsive-sm w-50">
    <h5>
      <p id="notice" class="badge badge-pill badge-success pt-2 pb-2"><%= notice %></p>
    </h5>   
    <hr>
    <p>
      <strong>DNI:</strong>
      <%= @client.IdentityNumber %>
    </p>

    <p>
      <strong>Nombre:</strong>
      <%= @client.Name %>
    </p>

    <p>
      <strong>Apellidos:</strong>
      <%= @client.LastName %>
    </p>

    <p>
      <strong>Dirección:</strong>
      <%= @client.Address %>
    </p>
    <p>
      <strong>Distrito:</strong>
      <td>
        <%= 
          if @client.city_id != nil
            City.select(:Name).where("id = " + @client.city_id.to_s).collect(&:Name)[0] 
          end
        %>
      </td>
    </p>
    <p>
      <strong>Correo:</strong>
      <%= @client.Mail %>
    </p>

    <p>
      <strong>Teléfono:</strong>
      <%= @client.Phone %>
    </p>

    <p>
      <strong>Activo:</strong>
      <%= check_box_tag "IsActive", 0, @client.IsActive, disabled: true, class: "checkBoxSyleIndex" %>
    </p>
    <hr>
    <%= link_to image_tag('EditIconBig.png'), edit_client_path(@client), title: 'Editar' %> |
    <%= link_to image_tag('BackIconBig.png'), clients_path, title: 'Atras'  %>
  </div>
</div>