<div class="jumbotron p-4">
  <h2><b>Citas</b></h2>
  <p id="notice" class="badge badge-pill badge-danger pt-2 pb-2"><%= notice %></p>
  <div class="table-responsive-sm">
    <table class="table table-striped table-hover w-50">
      <thead class="thead-dark">
        <tr>
          <th colspan="3" class="text-center">
            <%= link_to image_tag('NewIcon.png'), new_appointment_path, title: 'Nuevo' %>
          </th>
          <th>N° Solicitud</th>
          <th>Fecha Cita</th>
          <th>Atendido</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @appointments.each do |appointment| %>
          <tr>
            <td style="width:33px" class="pr-2 pl-2"><%= link_to image_tag('ShowIcon.png'), appointment, title: 'Ver' %></td>
            <td style="width:33px" class="pr-1 pl-1"><%= link_to image_tag('EditIcon.png'), edit_appointment_path(appointment), title: 'Editar' %></td>
            <td style="width:40px" class="pr-1 pl-2">
              <%= link_to image_tag('DeleteIcon.png'), appointment, title: 'Eliminar', method: :delete, data: { confirm: '¿Esta seguro?' } %>              
            </td>
            <td><%= appointment.IdRequestQuotation %></td>
            <td><%= RequestQuotation.select(:id).where("id = " + appointment.request_quotation_id.to_s).collect(&:id)[0] %></td>
            <td><%= appointment.AppointmentDate %></td>
            <td><%= appointment.IsAttended %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>