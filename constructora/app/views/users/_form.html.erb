<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h5 class="text-danger">Se encontraron los siguiente errores:</h5>

      <ul class="ml-3 text-danger">
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <hr>
  <div class="ml-3 mt-4 row">
    <div class="col-sm-2">
      <%= form.label :IdentityNumber, 'DNI' %>
    </div>
    <div class="col-sm-10">
      <%= form.text_field :IdentityNumber, :class => "form-control" %>
    </div>
  </div>
  <div class="ml-3 mt-2 row">
    <div class="col-sm-2">
      <%= form.label :Name, 'Nombre' %>
    </div>
    <div class="col-sm-10">
      <%= form.text_field :Name, :class => "form-control" %>
    </div>
  </div>
  <div class="ml-3 mt-2 row">
    <div class="col-sm-2">
      <%= form.label :LastName, 'Apellidos' %>
    </div>
    <div class="col-sm-10">
      <%= form.text_field :LastName, :class => "form-control" %>
    </div>
  </div>
  <div class="ml-3 mt-2 row">
    <div class="col-sm-2">
      <%= form.label :IdProfile, 'Perfil' %>
    </div>
    <div class="col-sm-10">
      <%= form.select :profile_id, Profile.all.collect {|e| [e.Name, e.id]}, {:include_blank => "Seleccione el Perfil"}, {:class => "form-control"} %>
    </div>
  </div>    
  <div class="ml-3 mt-2 row">
    <div class="col-sm-2">
      <%= form.label :IdCity, 'Distrito' %>
    </div>
    <div class="col-sm-10">
      <%= form.select :city_id, City.all.collect {|e| [e.Name, e.id]}, {:include_blank => "Seleccione el Distrito"}, {:class => "form-control"} %>
    </div>
  </div>
  <div class="ml-3 mt-2 row">
    <div class="col-sm-2">
      <%= form.label :Address, 'DirecciÃ³n' %>
    </div>
    <div class="col-sm-10">
      <%= form.text_field :Address, :class => "form-control" %>
    </div>
  </div>

  <div class="ml-3 mt-2 row">
    <div class="col-sm-2">
      <%= form.label :Mail, 'Correo' %>
    </div>
    <div class="col-sm-10">
      <%= form.text_field :Mail, :class => "form-control" %>
    </div>
  </div>

  <div class="ml-3 mt-2 row">
    <div class="col-sm-2">
      <%= form.label :Phone, 'Telefono' %>
    </div>
    <div class="col-sm-10">
      <%= form.text_field :Phone, :class => "form-control" %>
    </div>
  </div>

  <div class="ml-3 mt-2 row">
    <div class="col-sm-2">
      <%= form.label :IsActive, 'Activo' %>
    </div>
    <div class="col-sm-10">
      <%= form.check_box :IsActive, :class => "checkBoxSyleForm" %>
    </div>
  </div>

  <hr>
  <div class="actions">
    <%= form.submit "Guardar", :type => :image, :src => "/assets/SaveIconBig.png", :title => 'Guardar' %>
  </div>
<% end %>
