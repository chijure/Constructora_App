<div class="jumbotron p-4">
  <h2><b>Usuarios</b></h2>
  <p id="notice" class="badge badge-pill badge-danger pt-2 pb-2"><%= notice %></p>
  <div class="table-responsive-sm">
    <table class="table table-striped table-hover w-100">
      <thead class="thead-dark">
        <tr>
          <th colspan="3" class="text-center">
            <%= link_to image_tag('NewIcon.png'), new_user_path, title: 'Nuevo' %>
          </th>
          <th>Número Id.</th>
          <th>Nombre</th>
          <th>Apellidos</th>
          <th>Perfil</th>
          <th>Distrito</th>
          <th>Correo</th>
          <th>Teléfono</th>
          <th class="text-center">Activo</th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td style="width:33px" class="pr-2 pl-2"><%= link_to image_tag('ShowIcon.png'), user, title: 'Ver' %></td>
            <td style="width:33px" class="pr-1 pl-1"><%= link_to image_tag('EditIcon.png'), edit_user_path(user), title: 'Editar' %></td>
            <td style="width:40px" class="pr-1 pl-2">
              <%= link_to image_tag('DeleteIcon.png'), user, title: 'Eliminar', method: :delete, data: { confirm: '¿Esta seguro?' } %>              
            </td>
            <td><%= user.IdentityNumber %></td>
            <td><%= user.Name %></td>
            <td><%= user.LastName %></td>
            <td><%= Profile.select(:Name).where("id = " + user.profile_id.to_s).collect(&:Name)[0] %></td>
            <td><%= City.select(:Name).where("id = " + user.city_id.to_s).collect(&:Name)[0] %></td>
            <td><%= user.email %></td>
            <td><%= user.Phone %></td>
            <td class="text-center">
              <%= check_box_tag "IsActive", 0, user.IsActive, disabled: true, class: "checkBoxSyleIndex" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>
